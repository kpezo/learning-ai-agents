{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "evalset-schema.json",
  "title": "EvaluationSet",
  "description": "Schema for agent behavior evaluation scenarios",
  "type": "object",
  "required": ["name", "version", "agent", "scenarios"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique name for this evaluation set"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the evalset"
    },
    "agent": {
      "type": "string",
      "enum": ["tutor", "assessor", "curriculum_planner", "education_supervisor"],
      "description": "Target agent to evaluate"
    },
    "pass_threshold": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.8,
      "description": "Minimum ratio of scenarios that must pass"
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/EvaluationScenario"
      }
    }
  },
  "definitions": {
    "EvaluationScenario": {
      "type": "object",
      "required": ["scenario_id", "description", "input", "expected_patterns"],
      "properties": {
        "scenario_id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$",
          "description": "Unique identifier for this scenario"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what this scenario tests"
        },
        "input": {
          "type": "string",
          "description": "User message to send to the agent"
        },
        "expected_patterns": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "description": "Regex patterns that should match in the response"
        },
        "required_tool_calls": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tools that must be called during this scenario"
        },
        "forbidden_tool_calls": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tools that must NOT be called"
        },
        "max_response_time_ms": {
          "type": "integer",
          "minimum": 100,
          "maximum": 60000,
          "default": 5000,
          "description": "Maximum allowed response time in milliseconds"
        },
        "pass_threshold": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.8,
          "description": "Minimum ratio of patterns that must match"
        },
        "setup": {
          "type": "object",
          "description": "Optional setup state (e.g., pre-populate session)",
          "properties": {
            "session_state": {
              "type": "object"
            }
          }
        }
      }
    }
  }
}
